<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.lu.ics.controllers.MaintenanceScheduleController">
    <top>
        <Label fx:id="lblStatus" text="Maintenance Schedules" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
            </padding>
        </Label>
    </top>
    <center>
        <TableView fx:id="tblMaintenance" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colVin" prefWidth="75.0" text="VIN"/>
                <TableColumn fx:id="colName" prefWidth="75.0" text="Name"/>
                <TableColumn fx:id="colType" prefWidth="75.0" text="Type"/>
                <TableColumn fx:id="colCapacity" prefWidth="75.0" text="Capacity"/>
                <TableColumn fx:id="colCost" prefWidth="75.0" text="Cost"/>
                <TableColumn fx:id="colDate" prefWidth="75.0" text="Date"/>
                <TableColumn fx:id="colWorkshop" prefWidth="75.0" text="Workshop"/>
                <TableColumn fx:id="colDescription" prefWidth="75.0" text="Description"/>
                <TableColumn fx:id="colDuration" prefWidth="75.0" text="Duration"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <BorderPane>
            <bottom>
                <HBox spacing="10" alignment="CENTER">
                    <children>
                        <Button fx:id="btnAdd" onAction="#handleAdd" text="Add"/>
                        <Button fx:id="btnEdit" onAction="#handleEdit" text="Edit"/>
                        <Button fx:id="btnDelete" onAction="#handleDelete" text="Delete"/>
                        <Button fx:id="btnRefresh" onAction="#handleRefresh" text="Refresh"/>
                    </children>
                </HBox>
            </bottom>
            <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
            </padding>
        </BorderPane>
    </bottom>
</BorderPane>