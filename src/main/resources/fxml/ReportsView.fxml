<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.lu.ics.controllers.ReportsController">
    <top>
        <Label fx:id="lblReportsViewTitle" text="Reports View" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial Bold" size="13.0"/>
            </font>
        </Label>
    </top>
    <center>
        <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colReportId" prefWidth="75.0" text="Report ID"/>
                <TableColumn fx:id="colReportTitle" prefWidth="75.0" text="Title"/>
                <TableColumn fx:id="colReportValue" prefWidth="75.0" text="Value"/>
                <TableColumn fx:id="colReportDescription" prefWidth="75.0" text="Description"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lblReportStatus" text="Status: ready">
                    <padding>
                        <Insets top="40.0" left="10.0" right="10.0"/>
                    </padding>
                </Label>
                <Button fx:id="btnRefreshReports" onAction="#handleRefreshReports" text="Refresh Reports">
                    <HBox.margin>
                        <Insets top="10.0" bottom="10.0" left="20.0" right="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>