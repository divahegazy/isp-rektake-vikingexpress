<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="se.lu.ics.controllers.ServiceEntryController"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css">
    <children>
        <TableView fx:id="tblServiceEntries" layoutX="10.0" layoutY="40.0" prefHeight="314.0" prefWidth="580.0">
            <columns>
                <TableColumn fx:id="colWorkshop" prefWidth="75.0" text="Workshop" />
                <TableColumn fx:id="colVehicle" prefWidth="75.0" text="Vehicle" />
                <TableColumn fx:id="colDate" prefWidth="75.0" text="Date" />
                <TableColumn fx:id="colDescription" prefWidth="75.0" text="Description" />
                <TableColumn fx:id="colCost" prefWidth="75.0" text="Cost" />
                <TableColumn fx:id="colDuration" prefWidth="75.0" text="Duration" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox layoutY="354.0" prefHeight="55.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Button fx:id="btnAddServiceEntry" mnemonicParsing="false" onAction="#handleAddServiceEntry" text="Add">
                    <HBox.margin>
                        <Insets left="130.0" top="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnEditServiceEntry" mnemonicParsing="false" onAction="#handleEditServiceEntry" text="Edit">
                    <HBox.margin>
                        <Insets top="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnDeleteServiceEntry" mnemonicParsing="false" onAction="#handleDeleteServiceEntry" text="Delete">
                    <HBox.margin>
                        <Insets top="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnRefreshServiceEntry" mnemonicParsing="false" onAction="#handleRefreshServiceEntry" prefHeight="27.0" prefWidth="80.0" text="Refresh">
                    <HBox.margin>
                        <Insets top="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <Label fx:id="lblServiceEntryStatus" layoutX="14.0" layoutY="361.0" text="Status: ready" />
    </children>
</AnchorPane>