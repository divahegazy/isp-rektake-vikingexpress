<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="467.0" prefWidth="689.0" xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.lu.ics.controllers.WorkshopController">
    <children>
        <TableView fx:id="tblWorkshops" layoutX="1.0" layoutY="0.0" prefHeight="319.0" prefWidth="688.0">
            <columns>
                <TableColumn fx:id="colWorkshopName" prefWidth="75.0" text="Name"/>
                <TableColumn fx:id="colWorkshopAddress" prefWidth="75.0" text="Address"/>
                <TableColumn fx:id="colWorkshopType" prefWidth="75.0" text="Type"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox layoutX="24.0" layoutY="350.0" spacing="10.0">
            <children>
                <Button fx:id="btnAddWorkshop" onAction="#handleAddWorkshop" text="Add workshop"/>
                <Button fx:id="btnEditWorkshop" onAction="#handleEditWorkshop" text="Edit workshop"/>
                <Button fx:id="btnDeleteWorkshop" onAction="#handleDeleteWorkshop" text="Delete workshop"/>
                <Button fx:id="btnRefreshWorkshop" onAction="#handleRefreshWorkshops" text="Refresh workshop"/>
            </children>
        </HBox>
        <Label fx:id="lblWorkshopStatus" layoutX="28.0" layoutY="418.0" text="Status:"/>
    </children>
</AnchorPane>