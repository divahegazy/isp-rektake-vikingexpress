<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="se.lu.ics.controllers.WorkshopController"
            prefHeight="467.0" prefWidth="689.0">
   <children>
      <TableView fx:id="tblWorkshops" layoutX="1.0" layoutY="-1.0" prefHeight="319.0" prefWidth="688.0">
         <columns>
            <TableColumn fx:id="colWorkshopName" prefWidth="75.0" text="Name"/>
            <TableColumn fx:id="colWorkshopAddress" prefWidth="75.0" text="Address"/>
            <TableColumn fx:id="colWorkshopType" prefWidth="75.0" text="Type"/>
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
         </columnResizePolicy>
      </TableView>
      <Button fx:id="btnAddWorkshop" layoutX="24.0" layoutY="350.0" mnemonicParsing="false"
              onAction="#handleAddWorkshop" prefHeight="46.0" prefWidth="104.0" text="Add workshop">
         <font>
            <Font name="Arial" size="13.0"/>
         </font>
      </Button>
      <Button fx:id="btnEditWorkshop" layoutX="187.0" layoutY="350.0" mnemonicParsing="false"
              onAction="#handleEditWorkshop" prefHeight="46.0" prefWidth="104.0" text="Edit workshop"/>
      <Button fx:id="btnDeleteWorkshop" layoutX="352.0" layoutY="354.0" mnemonicParsing="false"
              onAction="#handleDeleteWorkshop" prefHeight="46.0" prefWidth="116.0" text="Delete workshop"/>
      <Button fx:id="btnRefreshWorkshop" layoutX="526.0" layoutY="354.0" mnemonicParsing="false"
              onAction="#handleRefreshWorkshops" prefHeight="46.0" prefWidth="116.0" text="Refresh workshop"/>
      <Label fx:id="lblWorkshopStatus" layoutX="28.0" layoutY="418.0" text="Status:">
         <font>
            <Font name="Arial Bold" size="13.0"/>
         </font>
      </Label>
   </children>
</AnchorPane>