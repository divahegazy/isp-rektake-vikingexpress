<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 
  Updated MainView.fxml 
  - Adds background color to the entire BorderPane
  - Adds padding to the VBox to shift navigation further right
  - Adjusts colors to align with VikingExpress theme
-->

<BorderPane prefHeight="600" prefWidth="800" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="se.lu.ics.controllers.MainController"
            style="-fx-background-color: #F2F4F7;">
    
    <!-- Top section: MenuBar + Title -->
    <top>
        <VBox alignment="TOP_CENTER" prefHeight="66.0" prefWidth="637.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar prefHeight="28.0" prefWidth="681.0">
                    <menus>
                        <Menu text="File">
                            <items>
                                <MenuItem onAction="#handleExit" text="Exit" />
                            </items>
                        </Menu>
                        <Menu text="View">
                            <items>
                                <MenuItem text="Delete" />
                            </items>
                        </Menu>
                        <Menu text="Help">
                            <items>
                                <MenuItem text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <Label fx:id="lblTitle" prefHeight="61.0" prefWidth="336.0" style="-fx-line-spacing: 5;" 
                       text="VikingExpress Fleet Management" textAlignment="CENTER" textFill="#081c6b" underline="true">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>

    <!-- Center section: dynamic contentArea -->
    <center>
        <BorderPane fx:id="contentArea" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets top="20.0" />
            </opaqueInsets>
        </BorderPane>
    </center>

    <!-- Bottom section: status bar -->
    <bottom>
        <HBox fx:id="statusBar" prefHeight="34.0" prefWidth="776.0" spacing="10.0" styleClass="status-bar" 
              BorderPane.alignment="CENTER_LEFT" style="-fx-background-color: #E1E5EB;">
            <children>
                <Label fx:id="lblStatus" prefHeight="34.0" prefWidth="865.0" text="  Status: Ready" />
            </children>
        </HBox>
    </bottom>

    <!-- Left section: navigation -->
    <left>
        <VBox prefHeight="459.0" prefWidth="220.0" spacing="10.0" BorderPane.alignment="CENTER"
              style="-fx-background-color: #081C6B; -fx-padding: 30 0 0 50;">
            <children>
                <Label fx:id="lblNavigation" alignment="CENTER" graphicTextGap="10.0" lineSpacing="50.0" 
                       prefHeight="18.0" prefWidth="185.0" text="Navigation" wrapText="true"
                       style="-fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;">
                </Label>

                <Button fx:id="btnVehicles" onAction="#handleManageVehicles" stylesheets="@styles.css" 
                        text="Manage vehicles" 
                        style="-fx-background-color: #FFFFFF; -fx-text-fill: #081C6B; -fx-font-weight: bold;" />

                <Button fx:id="btnWorkshops" onAction="#handleManageWorkshops" stylesheets="@styles.css" 
                        text="Manage workshops"
                        style="-fx-background-color: #FFFFFF; -fx-text-fill: #081C6B; -fx-font-weight: bold;" />

                <Button fx:id="btnServiceHistory" onAction="#handleManageHistory" stylesheets="@styles.css" 
                        text="Service history"
                        style="-fx-background-color: #FFFFFF; -fx-text-fill: #081C6B; -fx-font-weight: bold;" />

                <Button fx:id="btnMaintenance" onAction="#handleManageMaintenanceSchedules" stylesheets="@styles.css" 
                        text="Maintenance schedules"
                        style="-fx-background-color: #FFFFFF; -fx-text-fill: #081C6B; -fx-font-weight: bold;" />

                <Button fx:id="btnReports" onAction="#handleManageReports" stylesheets="@styles.css" 
                        text="Reports"
                        style="-fx-background-color: #FFFFFF; -fx-text-fill: #081C6B; -fx-font-weight: bold;" />
            </children>
        </VBox>
    </left>
</BorderPane>